<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.shimon.quizappintern.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.shimon.quizappintern.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.shimon.quizappintern.splashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.shimon.quizappintern.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_kotlinQuizFragment"
            app:destination="@id/kotlinQuizFragment" />
        <action
            android:id="@+id/action_homeFragment_to_javaQuizFragment"
            app:destination="@id/javaQuizFragment" />
        <action
            android:id="@+id/action_homeFragment_to_flutterQuizFragment"
            app:destination="@id/flutterQuizFragment" />
        <action
            android:id="@+id/action_homeFragment_to_pythonQuizFragment"
            app:destination="@id/pythonQuizFragment" />
        <action
            android:id="@+id/action_homeFragment_to_loginFragment4"
            app:destination="@id/loginFragment" />

    </fragment>
    <fragment
        android:id="@+id/kotlinQuizFragment"
        android:name="com.example.shimon.quizappintern.KotlinQuizFragment"
        android:label="fragment_kotlin_quiz"
        tools:layout="@layout/fragment_kotlin_quiz" />
    <fragment
        android:id="@+id/javaQuizFragment"
        android:name="com.example.shimon.quizappintern.JavaQuizFragment"
        android:label="fragment_java_quiz"
        tools:layout="@layout/fragment_java_quiz" />
    <fragment
        android:id="@+id/flutterQuizFragment"
        android:name="com.example.shimon.quizappintern.FlutterQuizFragment"
        android:label="fragment_flutter_quiz"
        tools:layout="@layout/fragment_flutter_quiz" />
    <fragment
        android:id="@+id/pythonQuizFragment"
        android:name="com.example.shimon.quizappintern.PythonQuizFragment"
        android:label="fragment_python_quiz"
        tools:layout="@layout/fragment_python_quiz" />
</navigation>